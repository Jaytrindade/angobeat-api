{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "space-before-function-paren": "off",
    "no-useless-catch": "off",
    "no-unused-vars": "warn",
    "comma-dangle": "off",
    "no-trailing-spaces": "warn",
    "object-curly-spacing": "warn"
  }
}
